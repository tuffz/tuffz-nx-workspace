{
  "name": "tuffz-com-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/tuffz-com-e2e/src",
  "projectType": "application",
  "tags": ["type:e2e", "scope:tuffz-com"],
  "implicitDependencies": ["tuffz-com"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/tuffz-com-e2e/cypress.config.ts",
        "devServerTarget": "tuffz-com:serve:development",
        "testingType": "e2e"
      },
      "configurations": {
        "production": {
          "devServerTarget": "tuffz-com:serve:production"
        },
        "ci": {
          "devServerTarget": "tuffz-com:serve-static"
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "commitMessageFormat": "chore({projectName}): üöÄ release version ${version} [skip ci]",
        "preset": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "docs", "section": "üìù Documentation" },
            { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "perf", "section": "‚ö°Ô∏è Performance Improvements" },
            { "type": "test", "section": "‚úÖ Tests" }
          ]
        },
        "skipCommitTypes": [
          "build",
          "chore",
          "ci",
          "docs",
          "refactor",
          "style",
          "test"
        ]
      }
    }
  }
}
