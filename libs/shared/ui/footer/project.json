        "jestConfig": "libs/shared/ui/footer/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "commitMessageFormat": "chore({projectName}): üöÄ release version ${version} [skip ci]",
        "preset": {
